@model ExamNotificationModel

<!DOCTYPE html>
<html>
<head>
    <title>Assignment Email Notifications</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            color: #333;
            margin: 0;
            padding: 0;
        }

        h1 {
            color: #333;
            text-align: center;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin: 20px auto;
        }

        th, td {
            padding: 10px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #007bff;
            color: #fff;
            font-weight: bold;
        }

        tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        tr:hover {
            background-color: #ddd;
        }

        a {
            color: #007bff;
            text-decoration: none;
        }

            a:hover {
                text-decoration: underline;
            }
    </style>
</head>
<body>
    <h1>Assignment Email Notifications</h1>


    <table>
        <tr>
            <th colspan="2">Assignment Details</th>
        </tr>
        @if (@Model.SectionName is not null)
        {
            <tr>
                <td>Section:</td>
                <td>@Model.SectionName</td>
            </tr>
        }
        @if (@Model.SectionName is not null && @Model.CourseCycleName is not null)
        {
            <tr>
                <td>Course:</td>
                <td>@Model.CourseCycleName</td>
            </tr>
        }
        @if (@Model.CourseName is not null)
        {
            <tr>
                <td>Course:</td>
                <td>@Model.CourseName</td>
            </tr>
        }
        <tr>
            <td>Exam Link:</td>
            <td><a href="@Model.ExamLink">Exam Link</a></td>
        </tr>
        <tr>
            <td>Exam Date:</td>
            <td>@Model.ExamDateTime.ToString("yyyy-MM-dd HH:mm:ss")</td>
        </tr>
    </table>

</body>
</html>