@model PasswordResetModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Password Reset</title>
    <style>
        /* Add your CSS styles here */
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }
        .container {
            max-width: 600px;
            margin: 0 auto;
            padding: 20px;
        }
        .logo {
            text-align: center;
            margin-bottom: 20px;
        }
        .logo img {
            max-width: 150px;
        }
        .message {
            margin-bottom: 20px;
        }
        .btn {
            display: inline-block;
            padding: 10px 20px;
            background-color: #007bff;
            color: #fff;
            text-decoration: none;
            border-radius: 5px;
        }
        .btn:hover {
            background-color: #0056b3;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="logo">
            <img src="https://cdn.vectorstock.com/i/500p/17/22/flat-web-template-with-lms-for-concept-design-vector-44391722.jpg" alt="Company Logo">
        </div>
        <div class="message">
            <p>Hello,@Model.Name</p>
            <p>You are receiving this email because we received a request to reset your password. If you did not request a password reset, please ignore this email.</p>
            <p>To reset your password, click the button below:</p>
            <p><a href="@Model?.ResetPasswordUrl" class="btn">Reset Password</a></p>
        </div>
        <p>Thank you!</p>
    </div>
</body>
</html>